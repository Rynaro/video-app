<div class="columns mb-5 pb-5 border-b">
  <div class="column is-three-fifths is-offset-one-fifth">
    <%= search_form_for @search, url: discover_videos_path do |f| %>
      <div class="field">
        <div class="control pb-3">
          <%= f.search_field :title_or_channel_title_cont,
                            class: "input",
                            placeholder: "Nome do vídeo ou nome do canal" %>
        </div>
        <div class="control has-text-centered">
          <%= f.submit "Pesquisar", class: "button is-info" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="columns mb-5 pb-5 border-b">
  <div class="column is-three-fifths is-offset-one-fifth">
    <h5 class="title is-5 has-text-centered mb-5">Resultados:</h5>
    <% if @videos.blank? %>
      <p class="subtitle is-5">Não há vídeos para serem listados</p>
    <% else %>
      <%= render VideoListComponent.new(videos: @videos) %>
    <% end %>
  </div>
</div>
