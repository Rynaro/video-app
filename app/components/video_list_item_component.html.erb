<%= link_to discover_video_path(video), class: "column is-full" do %>
  <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class="image is-128x128">
          <img src="<%= thumbnail %>" alt="Image">
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <h5 class="title is-5"><%= title %></h5>
          <p class="subtitle is-6"><%= author %></p>
          <p class="subtitle is-6"><i class="fas fa-eye mr-2"></i> <%= views %></p>
        </div>
      </div>
    </article>
  </div>
<% end %>
